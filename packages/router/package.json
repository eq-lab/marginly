{
  "name": "@marginly/router",
  "version": "0.1.0",
  "description": "Marginly router",
  "license": "GPL-2.0-or-later",
  "files": [
    "artifacts",
    "contracts",
    "typechain-types"
  ],
  "scripts": {
    "compile": "hardhat compile --config ./hardhat-configs/hardhat.config.ts",
    "test": "hardhat test --config ./hardhat-configs/hardhat.config.ts ./test/unit/*.spec.ts",
    "test:int-arb": "REPORT_GAS=true hardhat test --config ./hardhat-configs/hardhat-arb-fork.config.ts ./test/int/*.arb.spec.ts",
    "test:int-eth": "REPORT_GAS=true hardhat test --config ./hardhat-configs/hardhat-eth-fork.config.ts ./test/int/*.eth.spec.ts",
    "lint:write": "prettier --write ./contracts ./test",
    "docgen": "hardhat docgen --config ./hardhat-configs/hardhat.config.ts"
  },
  "author": "EqLab",
  "devDependencies": {
    "@aave/core-v3": "1.17.2",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@marginly/contracts-uniswap-mock": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@uniswap/snapshot-gas-cost": "^1.0.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@pendle/core-v2": "^4.4.4"
  }
}
